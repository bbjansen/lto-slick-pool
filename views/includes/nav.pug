                    span.icon.is-large
                        i.icon-question.is-size-5
                    span.is-size-5 FAQ

                .navbar-item.has-dropdown.is-hoverable
                    .navbar-link
                        span.icon.is-large
                            i.icon-wrench.is-size-5
                        span.is-size-5 Tools
