            span.navbar-burger.burger(data-target='navbarMenu')
                span
                span
                span
        #navbarMenu.navbar-menu
            .navbar-start
                a.navbar-item(href='/leases' class=title=='Leases'?'is-active':undefined)
                    span.icon.is-large
                        i.icon-note.is-size-5
                    span.is-size-5 Leases
                    
                a.navbar-item(href='/blocks' class=title=='Blocks'?'is-active':undefined)
                    span.icon.is-large
                        i.icon-layers.is-size-5
                    span.is-size-5 Blocks

